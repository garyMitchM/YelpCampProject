<% layout("layouts/boilerplate") %>

<div class="container justify-content-center align-items-center mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-8 mb-5">
      <div class="card shadow">
        <img
          class="card-img-top"
          src="https://images.unsplash.com/photo-1589439201513-ca97cd8bc608?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=869&q=80"
          alt=""
        />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username:</label>
              <input
                class="form-control"
                type="text"
                name="username"
                id="username"
                required
                autofocus
              />
              <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password:</label>
              <input class="form-control" type="password" name="password" id="password" required />
              <div class="valid-feedback">Looks Good!</div>
            </div>
            <button class="btn btn-success btn-block mb-2 col-12">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
